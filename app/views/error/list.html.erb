<h1 class= "display-3">Unhandled errors</h1>
<table class = "table">
  <thead>
    <th> Error Message </th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @uncovered_errors.each do |error| %>
      <% if admin_signed_in? %>
        <tr>
          <td><%= error.message %></td>
          <td><%= link_to 'mark resolved', error_path(error), method: :delete %></td>
        </tr>
      <%else %>
        <tr>
          <td><%= error.message %></td>
        </tr>
      <%end %>
    <% end %>
  </tbody>
</table>
